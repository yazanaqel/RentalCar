@model RentalCar.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EngineCapacity" class="control-label"></label>
                <input asp-for="EngineCapacity" class="form-control" />
                <span asp-validation-for="EngineCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="w-100"></label>
                @if (Model.Photo != null)
                {
                    <img class="rounded-circle w-50" id="ProfilePhoto" alt="ProfilePhoto"
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.Photo))" />
                }
                else
                {
                    <img class="w-75" id="ProfilePhoto" alt="ProfilePhoto" src="https://th.bing.com/th/id/OIP.T9s09Pl74H7Yzy0Wdj5ZjQAAAA?pid=ImgDet&rs=1" />
                }
                <div class="form-group">
                    <input asp-for="Photo" type="file" accept="image/*" class="form-group" onchange="getElementById('ProfilePhoto').src=window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DailyFare" class="control-label"></label>
                <input asp-for="DailyFare" class="form-control" />
                <span asp-validation-for="DailyFare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarType" class="control-label"></label>
                <select asp-for="CarType" class="form-control" asp-items="Html.GetEnumSelectList<CarType>()"></select>
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
