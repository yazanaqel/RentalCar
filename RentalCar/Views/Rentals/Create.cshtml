@model RentalCar.Models.Rental

@{
    ViewData["Title"] = "Create";
}


<div class="d-flex justify-content-center align-items-center p-3 " style="opacity: 0.9;">


    <div class="card d-flex justify-content-center align-items-center w-50 ">
        <h1>Create</h1>

        <h4>Rental</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsWithDriver" /> @Html.DisplayNameFor(model => model.IsWithDriver)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control" asp-items="Html.GetEnumSelectList<Location>()"></select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="From" class="control-lable"></label>
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="To" class="control-lable"></label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CarId" hidden="hidden" class="form-control" value="@ViewBag.CarId"/>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Rent" class="btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
